{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "target": "ES5"
  },
  "include": ["__tests__", "src", "globals.d.ts"]
}
